# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
location ~ .php$ {
  #try_files         $uri = 404;
  fastcgi_split_path_info ^(.+\.php)(/.+)$;
  fastcgi_pass   127.0.0.1:9000;  # port where FastCGI processes were spawned
  fastcgi_index  index.php;
  fastcgi_param  SCRIPT_FILENAME    /Users/amit/Projects/wps/$fastcgi_script_name;  # same path as above
  fastcgi_param PATH_INFO               $fastcgi_script_name;
  include        fastcgi_params;
}

# add status support, need some tweeks from  https://easyengine.io/tutorials/php/fpm-status-page/
location ~ ^/(status|ping)$ {
  access_log off;
  fastcgi_pass 127.0.0.1:9000;
  fastcgi_param  SCRIPT_FILENAME    /Users/amit/Projects/wps/$fastcgi_script_name;  # same path as above
  fastcgi_param PATH_INFO               $fastcgi_script_name;
  include fastcgi_params;
}
