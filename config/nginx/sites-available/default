server {
    listen               80;
    server_name            localhost;

    # MAMP DOCUMENT_ROOT !! Don't remove this line !!
    root                 "/Users/amit/Projects/wps/";

    access_log  /Users/amit/Projects/config/nginx/logs/access.log scripts;
    error_log   /Users/amit/Projects/config/nginx/logs/error.log;

    location / {
        index            index.php index.html;
    }

    # include   /Users/amit/Projects/config/nginx/conf.d/php-fpm; 
    location ~ \.php$ {

       fastcgi_pass   localhost:9000;
       # fastcgi_pass   /Users/amit/.phpbrew/php/php-7.0.13/sbin/php-fpm;
       fastcgi_index  index.php;
        fastcgi_param   SCRIPT_FILENAME  $document_root$fastcgi_script_name;
       include        fastcgi_params;

    }

    # location ~ \.php$ {
    #    proxy_pass   http://127.0.0.1;
    # }


    location ~ /\. {
        deny all;
    }

    location ~* \.(gif|jpg|png|pdf)$ {
      expires          30d;
    }

    # location ~ \..*/.*\.php$ {
    #   return 403;
    # }

    location /nginx_status {
        #stub_status      on;
        access_log       off;
        allow            127.0.0.1;
        deny             all;
    }
}

